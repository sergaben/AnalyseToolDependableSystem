<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="UploadController"
            prefHeight="400.0" prefWidth="600.0">
    <MenuBar fx:id="menuBar" AnchorPane.topAnchor="0" prefWidth="500">
        <menus>
            <Menu text="File">
                <MenuItem text="Exit" onAction="#exit" />
            </Menu>
            <Menu text="Options" >
                <MenuItem fx:id="mode" text="Analysis Mode" />
            </Menu>
        </menus>
    </MenuBar>
    <GridPane AnchorPane.topAnchor="30" alignment="center" hgap="20" vgap="20" >
        <padding><Insets top="25" right="25" bottom="10" left="25"/></padding>
        <Label fx:id="upload_lbl" text="Upload a file for analysis:"
               GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <TextField fx:id="filepath_input" promptText="Choose a File..."
                   GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <Button fx:id="browse_btn" text="Browse" onAction="#chooseFile"
                GridPane.columnIndex="2" GridPane.rowIndex="2" />
        <Label fx:id="text_lbl" text="Or paste your code below:"
               GridPane.columnIndex="1" GridPane.rowIndex="3" />
        <TextField prefHeight="200" prefWidth=" 300"
                   GridPane.columnIndex="1" GridPane.rowIndex="4" />
        <Button fx:id="single_btn" text="Run Analysis"
                GridPane.columnIndex="1" GridPane.rowIndex="5" />
    </GridPane>
</AnchorPane>