<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controller.ComparisonController">
    <stylesheets>
        <URL value="@Style.css" />
    </stylesheets>
    <MenuBar fx:id="menuBar" AnchorPane.topAnchor="0" prefWidth="600">
        <menus>
            <Menu text="File">
                <MenuItem text="New..." />
                <MenuItem fx:id="open" text="Open" onAction="#open" />
                <MenuItem fx:id="save" text="Save" onAction="#save" />
                <MenuItem text="Exit" onAction="#exit" />
            </Menu>
        </menus>
    </MenuBar>
    <Label id="results_lbl" text="Comparison Results"
           AnchorPane.topAnchor="50" AnchorPane.leftAnchor="25" />
    <Button text="Start New Analysis" onAction="#switchScene"
            AnchorPane.bottomAnchor="50" AnchorPane.rightAnchor="50" />
    <GridPane styleClass="root" prefWidth="300" hgap="20" vgap="15"
              AnchorPane.topAnchor="90" AnchorPane.leftAnchor="0" >
        <padding><Insets top="25" right="25" bottom="10" left="25"/></padding>
        <Label id="name" fx:id="name" text="Results" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <Label text="# of Lines: " GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <Label text="" fx:id="lines" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <Label text="# of Comments: " GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <Label text="" fx:id="numComments" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        <Label text="# of Methods:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <Label text="" fx:id="methods" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
        <Label text="Halstead Complexity:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
        <Label text="" fx:id="halstead" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
        <Label text="Cyclomatic Complexity:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
        <Label text="" fx:id="cyclomatic" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
        <Label text="Comment Quality:" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
        <Label text="" fx:id="commentQual" GridPane.columnIndex="1" GridPane.rowIndex="7"/>
    </GridPane>
    <GridPane styleClass="root" prefWidth="300" hgap="20" vgap="15"
              AnchorPane.topAnchor="90" AnchorPane.rightAnchor="0" >
        <padding><Insets top="25" right="25" bottom="10" left="25"/></padding>
        <Label id="name" fx:id="name2" text="Results" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <Label text="# of Lines: " GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <Label text="" fx:id="lines2" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <Label text="# of Comments: " GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <Label text="" fx:id="numComments2" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        <Label text="# of Methods:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <Label text="" fx:id="methods2" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
        <Label text="Halstead Complexity:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
        <Label text="" fx:id="halstead2" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
        <Label text="Cyclomatic Complexity:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
        <Label text="" fx:id="cyclomatic2" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
        <Label text="Comment Quality:" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
        <Label text="" fx:id="commentQual2" GridPane.columnIndex="1" GridPane.rowIndex="7"/>
    </GridPane>
</AnchorPane>
