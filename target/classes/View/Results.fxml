<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import java.net.URL?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controller.ResultsController">

    <MenuBar fx:id="menuBar" AnchorPane.topAnchor="0" prefWidth="500">
        <menus>
            <Menu text="File">
                <MenuItem text="New..." />
                <MenuItem text="Open" />
                <MenuItem text="Save" onAction="#save" />
                <MenuItem text="Exit" />
            </Menu>
        </menus>
    </MenuBar>
    <Button text="Start New Analysis" onAction="#switchScene"
            AnchorPane.bottomAnchor="50" AnchorPane.rightAnchor="20" />
    <GridPane styleClass="root" AnchorPane.topAnchor="30" hgap="20" vgap="15" >
        <stylesheets>
            <URL value="@../../java/Style.css" />
        </stylesheets>
        <padding><Insets top="25" right="25" bottom="10" left="25"/></padding>
        <Label id="results_lbl" text="Results" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <Label text="# of noOfLines: " GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <Label text="" fx:id="noOfLines" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <Label text="# of comments: " GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <Label text="" fx:id="comments" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        <Label text="# of noOfMethods:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <Label text="" fx:id="noOfMethods" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
        <Label text="Halstead Complexity:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
        <Label text="Cyclomatic Complexity:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
        <Label text="" fx:id="cyclomaticComplexity" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
        <Label text="Model.Comment Quality:" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
    </GridPane>
</AnchorPane>
