<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>

<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controller.ResultsController">

    <MenuBar fx:id="menuBar" AnchorPane.topAnchor="0" prefWidth="500">
        <menus>
            <Menu text="File">
                <Menu text="New" >
                    <MenuItem text="Single Analysis" onAction="#singleAnalysis"/>
                </Menu>
                <MenuItem fx:id="open" text="Open" onAction="#open" />
                <MenuItem fx:id="save" text="Save" onAction="#save" />
                <MenuItem text="Exit" onAction="#exit" />
            </Menu>
            <Menu text="Help">
                <MenuItem text="User Manual" onAction="#openUserManual"/>
            </Menu>
        </menus>
    </MenuBar>
    <!-- Logo -->
    <ImageView id="boxImage" fitHeight="60" preserveRatio="true"
               AnchorPane.topAnchor="35" AnchorPane.leftAnchor="225" >
        <image>
            <Image url="@logo-pic.png" />
        </image>
    </ImageView>
    <Button text="Save Results" onAction="#save"
            AnchorPane.bottomAnchor="50" AnchorPane.rightAnchor="320" />
    <Button text="Compare Results" onAction="#comparison"
            AnchorPane.bottomAnchor="50" AnchorPane.rightAnchor="175" />
    <Button text="Start New Analysis" onAction="#singleAnalysis"
            AnchorPane.bottomAnchor="50" AnchorPane.rightAnchor="20" />
    <GridPane styleClass="root" AnchorPane.topAnchor="100" hgap="20" vgap="15" >
        <stylesheets>
            <URL value="@Style.css" />
        </stylesheets>
        <padding><Insets top="25" right="25" bottom="10" left="25"/></padding>
        <Label id="results_lbl" text="Results" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <Label id="results_lbl" fx:id="name" text="Results" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <Label text="Number of Lines: " GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <Label text="" fx:id="lines" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <Label text="Number of Comments: " GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <Label text="" fx:id="numComments" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        <Label text="Number of Methods:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <Label text="" fx:id="methods" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
        <Label text="Halstead Difficulty: " GridPane.columnIndex="0" GridPane.rowIndex="5"/>
        <Label text="" fx:id="halsteadDifficulty" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
        <Label text="Halstead Effort: " GridPane.columnIndex="0" GridPane.rowIndex="6"/>
        <Label text="" fx:id="halsteadEffort" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
        <Label text="Halstead Volume: " GridPane.columnIndex="0" GridPane.rowIndex="7"/>
        <Label text="" fx:id="halsteadVolume" GridPane.columnIndex="1" GridPane.rowIndex="7"/>
        <Label text="Halstead Time: " GridPane.columnIndex="0" GridPane.rowIndex="8"/>
        <Label text="" fx:id="halsteadTime" GridPane.columnIndex="1" GridPane.rowIndex="8"/>
        <Label text="Halstead Program Level: " GridPane.columnIndex="0" GridPane.rowIndex="9"/>
        <Label text="" fx:id="halsteadProgramLevel" GridPane.columnIndex="1" GridPane.rowIndex="9"/>
        <Label text="Halstead Number of Bugs: " GridPane.columnIndex="0" GridPane.rowIndex="10"/>
        <Label text="" fx:id="halsteadBugs" GridPane.columnIndex="1" GridPane.rowIndex="10"/>
        <Label text="Cyclomatic Complexity:" GridPane.columnIndex="0" GridPane.rowIndex="11"/>
        <Label text="" fx:id="cyclomatic" GridPane.columnIndex="1" GridPane.rowIndex="11"/>
        <Label text="Comment Quality:" GridPane.columnIndex="0" GridPane.rowIndex="12"/>
        <Label text="" fx:id="commentQual" GridPane.columnIndex="1" GridPane.rowIndex="12"/>
    </GridPane>
</AnchorPane>
